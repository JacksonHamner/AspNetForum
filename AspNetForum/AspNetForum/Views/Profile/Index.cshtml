@model AspNetForum.ViewModels.ApplicationUser.ProfileListModel

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">Browse Users</div>
    </div>
    <div class="row forumIndexContent">
        <table class="table table-hover" id="userIndexTable">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Username
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Member Since
                    </th>
                    <th>
                        Rating
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var profile in Model.Profiles)
                {
                    <tr>
                        <td>
                            <div class="userProfilePic" style="background-image: url(@profile.ProfileImageUrl.);"></div>
                        </td>
                        <td>@profile.UserName</td>
                        <td>@profile.Email</td>
                        <td>@profile.MemberSince</td>
                        <td>@profile.UserRating</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>