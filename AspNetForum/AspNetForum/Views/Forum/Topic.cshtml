@model AspNetForum.ViewModels.Forum.ForumTopicModel

<h1>Welcome to @Model.Forum.Title Forum!</h1>

@if (Model.Posts.Any())
{
    <table class="table table-bordered table-hover">
        <tbody>
            @foreach (var post in Model.Posts)
            {
                <tr>
                    <td>
                       <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">
                           <span>@post.Title </span>
                       </a>
                    </td>
                    <td>
                        @post.AuthorName
                    </td>
                    <td>
                        @post.DatePosted
                    </td>
                    <td>
                        @post.RepliesCount
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="noPosts">
        <h3>It looks like there are no @Model.Forum.Title posts yet.</h3><br />
        Why not
        <a asp-controller="Post" asp-action="Create" asp-route-id="@Model.Forum.Id">
            <span>Create</span>
        </a>
        one?
    </div>
}